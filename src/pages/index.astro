---

import Layout from "@/layouts/Layout.astro";
import SocialLinks from "@/components/SocialLinks.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import Link from "@/components/shared/Link.astro";
import convertAsteriskToStrongTag from "@/utils/convertAsteriskToStrongTag";
import SkillItem from "@/components/SkillItem.astro";
import BackToTop from "@/components/shared/BackToTop.astro";


import presentation from "@/data/presentation";
import {personalProjects, workProjects} from "@/data/projects";
import tools from "@/data/tools";
---

<Layout>
  <main class="flex flex-col gap-20">
    <article class="flex flex-col gap-8">
      <h1 class="text-3xl text-neutral-100">{presentation.title}</h1>
      <h2
        class="max-w-[60ch] leading-6"
        set:html={convertAsteriskToStrongTag(presentation.description)}
      />
      <SocialLinks />
    </article>

    <article class="flex flex-col gap-8">
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 id="projects" class="text-lg text-neutral-100">
          Personal Projects ({personalProjects.length})
        </h3>
      </header>
      <section class="flex flex-col gap-4">
        {
          personalProjects.length !== 0 &&
          personalProjects.map((project) => <ProjectCard {...project} />)
        }
      </section>
    </article>

    <article class="flex flex-col gap-8">
      <header class="flex w-full flex-row justify-between gap-2">
        <h3 class="text-lg text-neutral-100">
          Work Projects ({workProjects.length})
        </h3>
      </header>
      <section class="flex flex-col gap-4">
        {
          workProjects.length !== 0 &&
          workProjects.map((project) => <ProjectCard {...project} />)
        }
      </section>
    </article>

    <article class="flex flex-col gap-8">
      <header class="flex w-full flex-row justify-between">
        <h3 id="tools" class="text-lg text-neutral-100">Tools</h3>
      </header>
      <p>
        {
          tools.map((tool) => <SkillItem {...tool}/>)
        }
      </p>
    </article>
  </main>

  <article class="flex flex-col gap-8">
    <header class="flex w-full flex-row justify-between gap-2">
      <h3 class="text-lg text-neutral-100">Get in touch</h3>
    </header>
    <p>
      You can reach me by Email at: 
      <Link
        href={`mailto:${presentation.mail}`}
        label={presentation.mail}
      /> 
      <br><br>Feel free to follow at my social links below.
    </p>

    <SocialLinks />
  </article>
  <BackToTop/>
</Layout>
