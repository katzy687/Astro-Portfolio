---
import ProjectCard from "./ProjectCard.astro";
import type { Project } from "@/data/projects";

type Props = {
  headerTitle: string;
  headerId?: string;
  projects: Project[];
};

const { headerTitle, headerId, projects } = Astro.props as Props;
---

<article class="flex flex-col gap-8">
  <header id={headerId} class="flex w-full flex-row justify-between gap-2">
    <h3 class="text-lg text-neutral-100">
      {headerTitle} ({projects.length})
    </h3>
  </header>
  <section class="flex flex-col gap-4">
    {projects.map((project) => <ProjectCard {...project} />)}
  </section>
</article>
